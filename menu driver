#include <stdio.h>
#include <conio.h>
#include <stdlib.h>
void main()
{
int a,no,i,c,number,count,num;
while(1)
{
printf("\n 1. factorial of a no.");
printf("\n 2. check whether prime or not");
printf("\n 3. check whether odd or even ");
printf("\n exit");
printf("enter your choice from 1 to 4");
scanf("%d",&a);

switch(a)
{
case 1:
printf("enter any no.");
scanf("%d",&no);
c=no
for(i=1;i<c;i++)
{
no=no*i;
}
printf("factorial of the given no. is %d",no);
break;

case 2:
printf("enter a no.");
scanf("%d",&number);
for(i=1;i<=number;i++)
{
if(a%i==0)
{
count++;
}
}
if(count>2)
{
printf("not a prime no.");
}
else
{
printf("prime no.");
}
break;

case 3:
printf("enter any no. ");
scanf("%d",& num);
if(a%2==0)
{
printf("even no.");
}
else
{
printf("odd no.");
}
break;

case 4:
exit(0);
}
getch();
}
}
